<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_text"
        android:text="I AM DOING GOOD"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_bt"
        android:layout_alignParentLeft="true"
        android:text="Call"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_bt"
        android:text="Send"
        android:layout_toRightOf="@id/share_bt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contacts_bt"
            android:layout_toRightOf="@id/send_bt"
            android:text="Contacts"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_bt"
          android:layout_below="@id/contacts_bt"
            android:text="number"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_bt"
            android:layout_toRightOf="@id/number_bt"
            android:layout_below="@id/contacts_bt"
            android:text="Google Cam"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mycamera_bt"
            android:layout_toRightOf="@id/camera_bt"
            android:layout_below="@id/contacts_bt"
            android:text="My cam"/>


    </RelativeLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/camera_iv"/>



</LinearLayout>